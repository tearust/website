{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs":true,
    "removeComments": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}